{
  "hooks": {
    "before:init": ["npm test", "npm run build"]
  },
  "git": {
    "commitMessage": "chore(release): ${version}",
    "requireBranch": "main"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file."
    }
  }
}
